$(document).ready(function() {

	
	$("#addAtividades").click(function() {
		
		$("#referencia").before('<label for="basic-url">* Atividade:</label><div class="input-group input_"><span class="input-group-addon" id="sizing-addon2"><span class="glyphicon glyphicon-user"></span></span> <input type="text" class="form-control" aria-describedby="sizing-addon2" required></div>');
		

	});
	
	
	$("#salvar").click(function() {
		
		var json= {}; 

		var i =0;
		
		$("#form input").each(function(){
			
			if($(this).val() != ''){
				
				json[i] = $(this).val();
				
				i++;
				
			}
			        
			        
		});
		
		console.log(JSON.stringify(json));
		
//		
